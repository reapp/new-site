
.color-blue { color: #4abae6; }
.color-green { color: #56be53; }
.color-yellow, .nav a:hover { color: #f8f062; }
.color-orange { color: #e15914; }
.color-red { color: #d62746; }

bg = #09B7B9
bg2 = #1C51A4

#hero-bg, .header, .footer, #step-1 {
  background-color: bg;
}

.header {
  background-color: bg;
  background-image: linear-gradient(-20deg, bg 30%, bg2 100%);
}

#step-1 {
  border: none;
  padding-top: 3rem;
  padding-bottom: 3rem;
  position: relative;
  color: #fff;
  background-color: bg;
  background-image: linear-gradient(-20deg, bg 30%, bg2 100%);
}

.install {
  font-size: 20px;
  padding: 1rem;
  margin: 1rem auto 2rem 0;
  line-height: 2rem;
  color: lighten(bg, 70%);
}

.banner {
  padding: 2px 0;
  background: bg;
  text-align: center;
  color: rgba(255,255,255,0.5);
  font-size: 15px;

  a {
    color: #fff;
    font-weight: bold;
  }
}

h1 { font-size: 2.2rem; }
h2 { font-size: 1.8rem; }
h3 { font-size: 1.4rem; }
h4 { font-size: 1.2rem; }

body {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
  font-size: 20px;
  line-height: 2rem;
  font-weight: normal;
  color: #555;
  overflow-x: hidden;
  position: relative;
}

h2 {
  font-weight: normal;
}

h2 span {
  font-size: 50%;
  opacity: 0.5;
  transition: all 300ms ease-in;
}

h2 span:hover {
  opacity: 1;
}

.spiro {
  pointer-events: none;
  content: ' ';
  position: absolute;
  display: block;
  width: 3200px;
  height: 2800px;
  top: 0;
  right: 0;
  opacity: .025;
  background: url(/images/spiro.svg) no-repeat;
  background-size: 100% 100%;
  background-position: 1400px -1800px;
  -webkit-transform: translateZ(0px);
  transform: translateZ(0px);
}

.row {
  max-width: 1300px;
  padding: 0 2rem;
  position: relative;
}

.logo {
  display: block;
  margin: 1.5rem 0 .3rem;
  padding: 1rem 0;
  width: 152px;
  height: 59px;
}


.logo a {
  margin: 0;
  display: block;
  text-indent: 100%;
  white-space: nowrap;
  overflow: hidden;
  width: 100%;
  height: 100%;
  background: url(/images/logo.png) no-repeat top left;
  background-size: 152px 59px;
}

.nav-container nav {
  opacity: 0.5;
  transition: opacity 300ms ease-in;
  padding: 0;
  font-weight: bold;
  margin-right: 0;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-flow: row;
  -ms-flex-flow: row;
  flex-flow: row;
  max-width: 330px;
  -ms-flex-item-align: end;
  -webkit-align-self: flex-end;
  align-self: flex-end;
}

.nav-container nav:hover {
  opacity: 1;
}

.nav-container a {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-grow: 1;
  -ms-flex-positive: 1;
  flex-grow: 1;
  margin: auto 0;
  font-size: 16px;
  padding: .4rem 1.5rem;
  color: #20201d;
  text-align: center;
}

.sub-nav {
  padding: 8px 0;
  background: #fff;
  border-bottom: 1px solid #ddd;
  overflow: hidden;

  hr {
    display: inline-block;
    margin: auto 20px -10px 0;
    border: none;
    border-right: 1px solid #ddd;
    height: 30px;
    clear: none;
  }
}

.sub-nav nav a {
  color: #999;
  padding: 0 20px 0 0;
  font-size: 17px;
}

.row .row {
  width: 100%;
  padding: 0;
  margin: 0;
}

.widget {
  margin: .1rem 0 -.1rem;
  height: 1.5rem;
  width: 1.5rem;
}

.justify-right {
  -webkit-justify-content: right;
  -ms-flex-pack: right;
  justify-content: right;
}

.buttons {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-flow: row;
  -ms-flex-flow: row;
  flex-flow: row;
  margin: 0 0 1rem 0;
  transition: all 300ms ease-in;
}

.buttons .button.prefer {
  opacity: 1;
  color: #fff;
}

.buttons a {
  opacity: 0.8;
  font-size: 17px;
}

.buttons a:hover {
  opacity: 1;
}

.buttons .button {
  margin: 0 1rem 0 0;
  border-color: #fff;
  color: #fff;
}

.buttons .button:first-child {
  margin: 0;
}

.info {
  display: none;
  background: #000;
  color: #fff;
  font-weight: bold;
  padding: 5px 6px;
  border-radius: 2px;
  position: absolute;
  font-size: .7rem;
  line-height: .7rem;
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
  z-index: 100;
}

.info-one {
  top: 100px;
  right: 200px;
}

.info-two {
  top: 160px;
  right: 150px;
}

.info-three {
  top: 200px;
  right: 50px;
}

blockquote {
  font-size: 1.6rem;
  line-height: 2.4rem;
  text-align: center;
  opacity: 0.8;
  font-style: italic;
  padding: 3rem;
  margin: 0;
}

blockquote::before {
  content: '“ ';
}

blockquote::after {
  content: '”';
  display: block;
  text-align: right;
}

blockquote::before,
blockquote::after {
  font-size: 4rem;
  opacity: 0.3;
  padding: 1rem;
  line-height: 0.5rem;
}

blockquote footer {
  font-size: 1rem;
  font-weight: bold;
  font-style: normal;
  text-align: right;
  display: block;
  padding: 0 3rem 0 0;
  margin: 0 0 -4rem 0;
}

.body {
  color: #111;
  padding-top: 2rem;
  padding-bottom: 2rem;
  z-index: 2;
}

.body .row {
  margin: 0 0 2rem 0;
}

.body div {
  position: relative;
  z-index: 2;
}

code.emphasize {
  font-size: 16px;
}

h4 {
  font-size: 20px;
  font-weight: normal;
  margin: 1rem 0;
}

.emphasize, .row-features p {
  font-size: 110%;
  line-height: 2.3rem;
}

.lighten, .lighten p {
  color: #777;
}

.footer {
  padding: 4rem 0;
  position: relative;
  color: #fff;
  text-align: center;
  overflow: hidden;
  min-height: 300px !important;
}

.footer a {
  color: #fff;
}

.footer .row {
  padding-top: 1rem;
  padding-bottom: 4rem;
}

.footer nav a {
  display: block;
}

.footer span {
  font-size: 80%;
  opacity: 0.5;
}

.gray {
  transition: all 200ms ease-in;
  opacity: 0.3;
  filter: grayscale(100%);
  -webkit-filter: grayscale(100%);
}

.gray:hover {
  opacity: 1;
  filter: grayscale(0%);
  -webkit-filter: grayscale(0%);
}

.content-nav {
  margin: 0;
  padding: 0;
  text-align: left;
}

.content-nav li {
  list-style: none;
  margin: 0;
  padding: 0;
}

.content-nav li strong {
  line-height: 2rem;
}

.content-nav li ul li {
  font-size: 1rem;
  line-height: 1.3rem;
}

.connect {
  position: absolute;
  bottom: 0;
  left: 410px;
  opacity: 0.5;
  transition: opacity 300ms ease-in;
}

.connect:hover {
  opacity: 1;
}

.icon-mini {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin: 0 30px 0 0;
  padding-left: 44px;
  height: 32px;
  overflow: hidden;
  background-size: contain;
  background-blend-mode: multiply;
  background-repeat: no-repeat;
  color: #fff;
  transition: opacity 300ms ease-in;
  flex-flow: column;
  justify-content: center;
}

.icon-mini:hover {
  color: #fff;
}

.twitter {
  background-image: url(/images/twit.svg);
  margin-left: 1rem;
}

.github {
  background-image: url(/images/github.svg);
}

.warn {
  background: #fff;
  color: black;
  padding: .2rem;
  text-align: center;
  position: relative;
  z-index: 10;
}

.intro {
  padding-left: 1rem;
}

.row.lifted {
  margin-top: -2rem;
}

.section:hover .icon {
  opacity: 1;
  filter: none;
  -webkit-filter: none;
}

.center-titles {
  text-align: center;
}

.note {
  text-align: center;
  padding: 1rem 0;
  z-index: 10;
  position: relative;
}

.note strong {
  color: #fff;
}

.note .row {
  padding: 0 4rem;
}

.note a {
  font-weight: bold;
}

.note p {
  color: rgba(255,255,255,0.6);
  margin: 0;
}

/* header */
.header {
  padding: 0;
  margin: 0;
  overflow: hidden;
}

.header .logo {
  margin-top: 0;
  margin-bottom: -8px;
  width: 111px;
  height: 43px;
}

.header .logo a {
  background-size: 111px 43px;
}

.nav {
  &.right {
    margin-right: 80px;
  }

  margin: auto;
  margin-left: 2rem;
}

.nav a {
  padding: 0 2.5rem 0 0;
  font-size: 1.1rem;
  color: #fff;
}

.nav a.active, .sub-nav a.active {
  font-weight: bold;
}

#nav {
  margin-top: 2rem;
}

#nav li {
  list-style: none;
  font-size: 1.2rem;
  line-height: 1.8rem;
}

#nav .H2 {
  font-weight: bold;
}

#nav .H3 {
  margin-left: 15px;
}

#nav.fixed {
  position: fixed;
  top: 20px;
  bottom: 0;
  overflow-y: auto;
}

.row > .button {
  -webkit-flex-grow: 1;
  -ms-flex-positive: 1;
  flex-grow: 1;
}